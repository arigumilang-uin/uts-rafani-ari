<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".fragments.HomeFragment">

    <!-- Gambar Mascot -->


    <!-- Judul Halaman -->

    <ImageView
        android:id="@+id/imgMascot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/mascot_image"
        android:src="@drawable/logo_app"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-11dp" />

    <TextView
android:id="@+id/tvHomeTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Pilih Pelajaran"
android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="#000000"
    app:layout_constraintTop_toBottomOf="@id/imgMascot"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"/>

    <!-- Tombol Beginner -->
<Button
android:id="@+id/btnBeginner"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Beginner"
android:textColor="#000000"
android:textSize="18sp"
    android:backgroundTint="#FFEB3B"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toBottomOf="@id/tvHomeTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:padding="16dp"
    android:layout_marginBottom="12dp"/>

    <!-- Tombol Intermediate -->
<Button
android:id="@+id/btnIntermediate"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Intermediate"
android:textColor="#000000"
android:textSize="18sp"
android:backgroundTint="#FFEB3B"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@id/btnBeginner"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:padding="16dp"
android:layout_marginBottom="12dp"/>

    <!-- Tombol Advanced -->
<Button
android:id="@+id/btnAdvanced"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Advanced"
android:textColor="#000000"
android:textSize="18sp"
android:backgroundTint="#FFEB3B"
android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@id/btnIntermediate"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:padding="16dp"
android:layout_marginBottom="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
